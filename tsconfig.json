{
    "compilerOptions": {
        /* File Layout */
        "rootDir": "./src",
        "outDir": "./dist",

        /* Environment */
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node"],

        /* Output options */
        "sourceMap": true,
        "declaration": true,

        /* Strict type checking */
        "strict": true,
        "skipLibCheck": true,

        /* Recommended developer options */
        "noImplicitAny": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
